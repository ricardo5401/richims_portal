<div class="w-full right-content">
  <img src="<%= asset_path('background/top-grass.png') %>" class="w-full" />
  <div class="child-container">
    <h1 class="font-medium text-lg">
      <%= I18n.t 'stats.characters' %>
    </h1>
    <div class="w-full mt-2 grid grid-cols-2 sm:grid-cols-3 gap-4">
      <% @characters.each do |character| %>
        <div class="border border-gray-200 shadow rounded">
          <div class="px-3 py-2 border-b border-gray-200">
            <%= character.name %>
          </div>
          <div class="flex justify-center">
            <img data-src="<%= character.picture %>" alt="<%= character.name %>" class="hidden lazy" />
          </div>
          <div class="px-3 py-2">
            <div class="mb-1">
              <span class="font-medium">Job:</span> <%= character.job_name %>
            </div>
            <div class="mb-1">
              <span class="font-medium">Level:</span> <%= character.level %>
            </div>
            <div class="">
              <span class="font-medium">Exp:</span> <%= character.exp %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<script>
	window.onload = function () {
		const pictures = document.getElementsByClassName("lazy");
		for(let i = 0; i < pictures.length; i += 1) {
			pictures[i].src = pictures[i].dataset.src;
			pictures[i].classList.remove("hidden");
		}
	}
</script>