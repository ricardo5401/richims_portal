<div class="w-full right-content">
  <img src="<%= asset_path('background/top-grass.png') %>" class="w-full" />
  <div class="child-container">
    <div class="w-full mb-4 pb-4 border-b border-gray-200 flex items-center justify-between">
      <h1 class="font-medium text-lg">
        <%= I18n.t 'menu.packs' %>
      </h1>
      <a href="/packs/new" class="flex items-center justify-center py-1 text-sm px-3 rounded border border-blue-600 bg-blue-600 text-white">
        <%= inline_svg_tag('icons/add.svg', { class: 'w-4 h-4 mr-2' }) %>
        <%= I18n.t 'store.add' %>
      </a>
    </div>
    <div class="w-full mt-2 grid grid-cols-2 sm:grid-cols-3 gap-2 sm:gap-4">
      <% @packs.each do |pack| %>
        <%= render partial: 'packs/row', locals: { pack: pack } %>
      <% end %>
    </div>
    <%= will_paginate @packs, previous_label: '<', next_label: '>' %>
  </div>
</div>